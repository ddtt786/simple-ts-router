{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strict": true,
    "outDir": "build",
    "declaration": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*.ts"]
}
